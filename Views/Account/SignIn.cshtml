@model NewsPortalApp.Models.SignInViewModel
@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/SignIn.css" />

<div class="signup-container">
    <div class="form-header">
        <h1>
            <span style="color: #64748b;">Daily</span>Neuzz
        </h1><br />
        <h2>Sign In</h2>
        <p class="subtitle">Welcome to Morning Greetings, Please provide your details</p>
    </div>

    <div class="signup-box">
        <!-- Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <!-- Error Message -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }

        <form asp-action="SignIn" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="name@example.com" autocomplete="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" autocomplete="current-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="button-group">
                <button type="submit" class="signup-btn">Sign In</button>
                <div class="google-btn-container">
                    <a asp-controller="Account" asp-action="GoogleLogin" class="google-btn">Continue with Google</a>
                    <a asp-controller="Account" asp-action="ForgotPassword" class="forgot-password">Forgot Password?</a>
                </div>
                <p class="login-link">Don't have an account? <a asp-action="SignUp">Sign Up</a></p>
            </div>
        </form>
    </div>
</div>

<style>
    .google-btn-container {
        position: relative;
        display: inline-block;
        width: 100%; /* Ensures it takes full width of the button */
    }

    .signup-btn {
        padding: 10px 20px;
        background-color: #007BFF; /* Blue color to match your image */
        border: none;
        color: white;
        cursor: pointer;
        border-radius: 5px;
        width: 100%; /* Full width of the container */
    }

    .google-btn {
        background-color: green;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        display: inline-block;
        text-decoration: none;
        width: 100%; /* Full width to match Sign In button */
        margin-top: 10px; /* Space between Sign In and Google button */
    }

        .google-btn:hover {
            background-color: #357abd;
        }

    .forgot-password {
        position: absolute;
        right: 0;
        bottom: -25px; /* Adjusts vertical position below the Google button */
        font-size: 12px;
        color: #007BFF;
        text-decoration: none;
    }

        .forgot-password:hover {
            text-decoration: underline;
        }

    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 4px;
    }

    .alert-success {
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
    }

    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }

    .login-link {
        margin-top: 20px;
        text-align: center;
    }
</style>