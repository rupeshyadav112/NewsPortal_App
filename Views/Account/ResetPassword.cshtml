@model NewsPortal_App.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/SignIn.css" />

<div class="signup-container">
    <div class="form-header">
        <h1>
            <span style="color: #64748b;">Daily</span>Neuzz
        </h1><br />
        <h2>Reset Password</h2>
        <p class="subtitle">Enter your new password below</p>
    </div>

    <div class="signup-box">
        <!-- Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <!-- Error Message -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }

        <form asp-action="ResetPassword" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Token" />

            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter new password" autocomplete="new-password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm new password" autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="button-group">
                <button type="submit" class="signup-btn">Reset Password</button>
                <p class="login-link">Back to <a asp-action="SignIn">Sign In</a></p>
            </div>
        </form>
    </div>
</div>

<style>
    /* Reset and Base Styles (SignUp से लिया गया) */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    }

    body {
        background-color: #f5f5f5;
        min-height: 100vh;
        padding-top: 70px;
    }
    .signup-btn {
        padding: 10px 20px;
        background-color: #007BFF; /* Blue color to match your design */
        border: none;
        color: white;
        cursor: pointer;
        border-radius: 5px;
        width: 100%; /* Full width of the container */
    }

    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 4px;
    }

    .alert-success {
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
    }

    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }

    .login-link {
        margin-top: 20px;
        text-align: center;
    }
</style>